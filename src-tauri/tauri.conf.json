{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "afk-journey-companion",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ],
        "writeFile": false
      },
      "path": {
        "all": true
      },
      "window": {
        "setSize": true,
        "setAlwaysOnTop": true
      }
    },
    "windows": [
      {
        "title": "afk-journey-companion",
        "width": 1300,
        "height": 800,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com-afk-journey-companion",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    }
  }
}